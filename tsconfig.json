{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2015",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,

        "baseUrl": ".",
        "paths": {
            "@heleonix/*": ["packages/*/src/index.ts"]
        }
    }
}
