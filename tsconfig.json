{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "ES2019.Symbol"
        ],
        "target": "ES5",
        "module": "ES2015",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "declarationDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@heleonix/*": ["packages/*/src/index.ts"]
        }
    }
}
